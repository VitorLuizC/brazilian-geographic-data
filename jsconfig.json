{
  "compilerOptions": {
    "checkJs": true,
    "lib": [ "es2018" ],
    "target": "esnext",
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,

    // Strictness
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/",
    "raw/",
    "data/",
    "reference.d.ts"
  ]
}
