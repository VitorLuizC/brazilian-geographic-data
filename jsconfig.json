{
  "compilerOptions": {
    "checkJs": true,
    "lib": ["es2023"],
    "target": "es2023",
    "module": "node16",
    "esModuleInterop": true,
    "moduleResolution": "node16",
    "resolveJsonModule": true,

    // Strictness
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/", "raw/", "data/"]
}
